\mode<presentation>

\definecolor{comboblue}{RGB}{0,102,204}
\colorlet{comboblack}  {comboblue!40!black}
\colorlet{comboblue100}{comboblue}
\colorlet{comboblue75} {comboblue!75!white}
\colorlet{comboblue50} {comboblue!50!white}
\colorlet{comboblue25} {comboblue!25!white}
\colorlet{comboblue10} {comboblue!10!white}
\colorlet{comboblue5}  {comboblue!5!white}

\definecolor{combored}{RGB}{255,51,51}
\colorlet{comboredblack}{combored!40!black}
\colorlet{combored100}{combored}
\colorlet{combored75} {combored!75!white}
\colorlet{combored50} {combored!50!white}
\colorlet{combored25} {combored!25!white}
\colorlet{combored10} {combored!10!white}
\colorlet{combored5}  {combored!5!white}

\definecolor{combocyan}{RGB}{51,153,255}
\colorlet{combocyanblack}{combocyan!40!black}
\colorlet{combocyan100}{combocyan}
\colorlet{combocyan75} {combocyan!75!white}
\colorlet{combocyan50} {combocyan!50!white}
\colorlet{combocyan25} {combocyan!25!white}
\colorlet{combocyan10} {combocyan!10!white}
\colorlet{combocyan5}  {combocyan!5!white}

\definecolor{combogreen}{RGB}{0, 204, 102}
\colorlet{combogreenblack}{combogreen!40!black}
\colorlet{combogreen100}{combogreen}
\colorlet{combogreen50}{combogreen!50!white}
\colorlet{combogreen25}{combogreen!25!white}

% Standard block
\setbeamercolor{block title}{fg = black, bg = comboblue75}
\setbeamercolor{block body}{bg = comboblue25}

% Alert block
\setbeamercolor{block title alerted}{fg = comboredblack, bg = combored50}
\setbeamercolor{block body alerted}{bg = combored25}

% Example block
\setbeamercolor{block title example}{fg = combogreenblack, bg = combogreen50}
\setbeamercolor{block body example}{bg = combogreen25}

\setbeamercolor{author in head/foot}{bg = comboblue50, fg=black}
\setbeamercolor{date in head/foot}{bg = combogreen25, fg=black}
\setbeamercolor{section in head/foot}{fg = black}

\setbeamercolor{title title page}{bg=comboblue75}
\setbeamercolor{date title page}{bg=combogreen50}
\setbeamercolor{institute/author title page}{bg=white}
\setbeamercolor{header logo section}{bg = comboblack}

\setbeamercolor{navigation frame}{bg = comboblue25}


\setbeamercolor{normal text}{fg = black}
\setbeamercolor{alerted text}{fg=combored100}
\setbeamercolor{example text}{fg=combocyan100}
\setbeamercolor{subtitle}{fg=combocyan10}
\setbeamercolor{title}{fg=combocyan10}
\setbeamercolor{institute}{fg=gray}

\setbeamercolor{itemize item}{fg=comboblue100}
\setbeamercolor{itemize subitem}{fg=comboblue100}
\setbeamercolor{itemize subsubitem}{fg=comboblue100}

\setbeamercolor{enumerate item}{fg=comboblue100}
\setbeamercolor{enumerate subitem}{fg=comboblue100}
\setbeamercolor{enumerate subsubitem}{fg=comboblue100}

\mode
<all>